# KashiFind Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# SERVER CONFIGURATION
PORT=3001
FRONTEND_URL=http://localhost:3000

# PRODUCTION DEPLOYMENT (Optional - for Railway/Render/etc)
# Set this to your production backend URL when deploying
# Example: BACKEND_URL=https://your-backend.railway.app/api
# Leave empty for local development
BACKEND_URL=

# JWT AUTHENTICATION (Required)
# Generate a secure random string for production
# You can use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=7d


# EXTERNAL APIs (Required for Full Functionality)


# Spotify API - REQUIRED for song search
# Get from: https://developer.spotify.com/dashboard
# 1. Create a Spotify app
# 2. Get Client ID and Client Secret
# 3. Add redirect URI: http://localhost:3000 (for OAuth if needed)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# YouTube API - REQUIRED for music videos
# Get from: https://console.developers.google.com/
# 1. Create a project (or use existing)
# 2. Enable "YouTube Data API v3"
# 3. Create credentials â†’ API Key
# 4. Copy the API key
YOUTUBE_API_KEY=your_youtube_api_key_here

# RATE LIMITING (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

LOG_LEVEL=INFO
