{
  "name": "modern-lyrics-search",
  "version": "1.0.0",
  "description": "Modern Japanese lyrics search website with furigana and romaji support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:backend": "node server.js",
    "dev:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install",
    "setup": "node setup-env.js && npm run install-all && echo 'Setup complete! Run npm run dev:backend in one terminal and npm run dev:frontend in another.'",
    "setup:env": "node setup-env.js",
    "seed": "node scripts/seedData.js",
    "test:backend": "curl http://localhost:3001/api/health",
    "test:frontend": "curl http://localhost:3000"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "kuroshiro": "^1.2.0",
    "kuroshiro-analyzer-kuromoji": "^1.1.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "lyrics",
    "japanese",
    "search",
    "furigana",
    "romaji",
    "music"
  ],
  "author": "Your Name",
  "license": "MIT"
}
